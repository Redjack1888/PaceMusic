<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>

    <style name="text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/m_p_8</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="icons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/m_p_4</item>
        <item name="android:paddingLeft">@dimen/m_p_8</item>
        <item name="android:paddingRight">@dimen/m_p_8</item>
        <item name="android:paddingTop">@dimen/m_p_4</item>
        <item name="android:scaleType">fitCenter</item>

    </style>
</resources>
